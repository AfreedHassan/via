{
  "name": "hello-world-preview",
  "displayName": "Hello World Preview",
  "description": "Static website preview in VS Code sidebar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:helloWorldPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hello-world-sidebar",
          "title": "Hello World Preview",
          "icon": "$(preview)"
        }
      ]
    },
    "views": {
      "hello-world-sidebar": [
        {
          "type": "webview",
          "id": "helloWorldPreview",
          "name": "Hello World Preview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vscode": "^1.1.37"
  }
}
